{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Video Styler",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/src/video_styler",
            "args": [
                "--input",
                "examples/input.mp4",
                "--output",
                "examples/output.mp4",
                "--style",
                "examples/style.jpg",
                "--verbose"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "lldb",
            "preLaunchTask": "Build Debug"
        },
        {
            "name": "Debug Tests",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/tests/video_styler_tests",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/build/tests",
            "environment": [],
            "externalConsole": false,
            "MIMode": "lldb",
            "preLaunchTask": "Build Debug"
        }
    ]
}