{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Configure CMake (Ninja)",
            "type": "shell",
            "command": "nix",
            "args": [
                "develop",
                "--command",
                "cmake",
                "-B",
                "${workspaceFolder}/build",
                "-S",
                "${workspaceFolder}",
                "-GNinja",
                "-DCMAKE_BUILD_TYPE=Debug",
                "-DCMAKE_EXPORT_COMPILE_COMMANDS=ON",
                "-DCMAKE_CXX_STANDARD=23"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Configure with Ninja generator and C++23 in Nix environment"
        },
        {
            "label": "Build Debug (Ninja)",
            "type": "shell",
            "command": "nix",
            "args": [
                "develop",
                "--command",
                "ninja",
                "-C",
                "${workspaceFolder}/build"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "dependsOn": "Configure CMake (Ninja)",
            "detail": "Build using Ninja in Nix environment (fast parallel builds)"
        },
        {
            "label": "Build Release (Ninja)",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-B",
                "${workspaceFolder}/build-release",
                "-S",
                "${workspaceFolder}",
                "-GNinja",
                "-DCMAKE_BUILD_TYPE=Release",
                "-DCMAKE_EXPORT_COMPILE_COMMANDS=ON"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Run Tests",
            "type": "shell",
            "command": "nix",
            "args": [
                "develop",
                "--command",
                "bash",
                "-c",
                "cd build && ./tests/video_styler_tests"
            ],
            "group": "test",
            "dependsOn": "Build Debug (Ninja)",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "detail": "Run unit tests in Nix environment"
        },
        {
            "label": "Build and Test",
            "type": "shell",
            "command": "nix",
            "args": [
                "develop",
                "--command",
                "bash",
                "-c",
                "mkdir -p build && cd build && cmake -GNinja .. && ninja && ./tests/video_styler_tests"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Full build and test cycle in Nix environment"
        },
        {
            "label": "Clean Build",
            "type": "shell",
            "command": "rm",
            "args": [
                "-rf",
                "${workspaceFolder}/build"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "detail": "Clean build directory"
        },
        {
            "label": "Enter Nix Shell",
            "type": "shell",
            "command": "nix",
            "args": [
                "develop"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "new"
            },
            "detail": "Enter the Nix development environment"
        },
        {
            "label": "Full Build & Test",
            "dependsOrder": "sequence",
            "dependsOn": [
                "Clean Build",
                "Build Debug (Ninja)",
                "Run Tests"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "detail": "Complete rebuild and test cycle"
        }
    ]
}